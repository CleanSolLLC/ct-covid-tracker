
	<% if current_user.ethnic_cases.empty? %>

	    <h4><%= current_user.username %>,</h4>

	     You have no data saved yet please click the following link to begin your search: <br>

	<% else %>

			<p>Here is a list of your STATEWIDE COVID-19 data by ETHNICITY</p>
			<br>

			<table>

			<%= button_to "Delete All", {:controller => :ethnic_cases, :action => :destroy_all}, :method => 'delete', data: { confirm: 'Are you sure?'} %><br>				

			  <tr>

			  	<th>Delete</th>
			  	<th>Date</th>
			  	<th>Ethnic Group</th>
			  	<th>Population</th>
	          	<th>Total Cases</th>
          		<th>Case Change</th>
          		<th>Deaths</th>
          		<th>Death Change</th>
					

			  </tr>
			  <br>
				
					<% @ethnic_cases.each do |c| %>

					<tr>
					   <td><%= button_to "Delete", {:controller => :ethnic_cases, :action => :destroy, :id => c.id}, :method => 'delete' %></td>
					   <td><%= c.query_date.strftime('%m/%d/%Y') %></td>
					   <td><%= c.ethnic_group.gsub("NH",'').strip %></td>
					   <td><%= c.total_pop == 0 ? "Unknown" : number_with_delimiter(c.total_pop) %></td>
             		   <td><%= number_with_delimiter(c.case_tot) %> </td>
			           <td><%= c.case_change == 0 ? "**" : c.case_dir %><%= number_with_delimiter(c.case_change) %> </td>
			           <td><%= number_with_delimiter(c.deaths) %> </td>
			           <td><%= c.death_change == 0 ? "**" : c.death_dir %><%= number_with_delimiter(c.death_change) %> </td>


					</tr>
					<% end %>
			</table>

	<% end %>

	<br>
	<%= link_to "Select Additional Dates", new_user_ethnic_case_path(current_user) %>
	










